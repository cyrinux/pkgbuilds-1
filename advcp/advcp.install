post_install() {
  echo "To use by default, add \"alias cp='advcp -g'\" and \"alias mv='advmv -g'\" to your .bashrc"
}

post_upgrade() {
  if ! grep -q "alias cp='advcp -g'" ~/.bashrc; then
    post_install $1
  fi
}

post_remove() {
  if grep -q "alias cp='advcp -g'" ~/.bashrc; then
    echo "Remove the advcp and advmv aliases from your .bashrc"
  fi
}
